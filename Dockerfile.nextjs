FROM node:18-alpine

WORKDIR /app

# Copy configuration files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Generate Prisma client with the correct binary targets
RUN npx prisma generate

# Build for production if needed (commented out for development)
# RUN npm run build

# Expose ports
EXPOSE 3000
EXPOSE 5555

# Command to start in development mode
CMD ["npm", "run", "dev"]